<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">@dimen/_65sdp</item>
        <item name="android:layout_height">@dimen/_65sdp</item>
        <item name="android:layout_margin">@dimen/_2sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/block_background</item>
    </style>

</resources>
